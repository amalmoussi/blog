<% unless comment.archived? %>
  <div class="border-b-2 border-gray-300 py-4">
    <h4 class="font-bold text-lg mb-2"><%= comment.commenter %></h4>
    <p class="text-gray-700 text-base"><%= comment.body %></p>
    <div class="mt-2 flex">
      <%= link_to "Destroy Comment", [comment.article, comment] , method: :delete, data: {
        confirm: "Are you sure?"
      }, class: "text-red-500 font-semibold hover:text-red-700" %>
    </div>
  </div>
<% end %>
