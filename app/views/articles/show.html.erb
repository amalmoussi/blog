<div class="flex items-center justify-center h-screen">
<div class="w-full max-w-sm mx-auto bg-blue-100 p-8 rounded-lg shadow-md">
  <h1 class="text-center text-gray-700 font-bold text-2xl mb-4"><%= @article.title %></h1>

  <p class="text-gray-700 leading-tight mb-4"><%= @article.body %></p>

  <ul class="flex justify-between mb-4">
    <li><%= link_to "Edit", edit_article_path(@article), class: "text-blue-500 hover:text-blue-800 font-bold" %></li>
    <li><%= link_to "Destroy", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "text-blue-500 hover:text-blue-800 font-bold" %></li>
  </ul>

  <% if @article.image.attached? %>
    <div class="mb-4">
      <%= image_tag @article.image, class: "w-full rounded-lg shadow-md" %>
    </div>
  <% end %>

  <h2 class="text-gray-700 font-bold text-lg mb-2">Comments</h2>
  <%= render @article.comments %>

  <h2 class="text-gray-700 font-bold text-lg mb-2">Add a comment:</h2>
  <%= render 'comments/form' %>
</div>
</div>


